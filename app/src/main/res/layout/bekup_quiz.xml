<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#4286f5">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/list"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4286f5">

        <ImageView
            android:id="@+id/rose_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rose"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/dolar_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textColor="#fff"
            android:layout_toRightOf="@id/rose_img"
            android:textSize="56sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up Wallet Balance"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_toRightOf="@id/rose_img"
            android:layout_below="@id/dolar_text"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4286f5">

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:textColor="#4286f5"
            android:layout_margin="10dp"
            android:text="SEND MONEY"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FFF"
            android:layout_margin="10dp"
            android:text="REQUEST MONEY"
            android:textColor="#4286f5"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img1_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/one_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Set up tap and pay"
            android:textColor="#000"
            android:layout_toRightOf="@id/img1_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make purchases just by tapping your phone at select merchants"
            android:layout_below="@id/one_text"
            android:layout_toRightOf="@id/img1_img"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img2_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/two_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get the Google Wallet Card"
            android:textColor="#000"
            android:layout_toRightOf="@id/img2_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Spend your Wallet Balance at millions of MasterCard locations"
            android:layout_below="@id/two_text"
            android:layout_toRightOf="@id/img2_img"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/img3_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/img3"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/three_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send money for free"
            android:textColor="#000"
            android:layout_toRightOf="@id/img3_img"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use your debit card to send money for free"
            android:layout_below="@id/three_text"
            android:layout_toRightOf="@id/img3_img"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"/>
    </LinearLayout>
</LinearLayout>
